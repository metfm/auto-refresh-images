<img src='https://www.meteology.gr/cam/neairakleia/?time=' onload='imageRefresh(this, 1000);'>



<script>

function imageRefresh(img, timeout) {
    setTimeout(function() {
     var d = new Date;
     var http = img.src;
     if (http.indexOf("&d=") != -1) { http = http.split("&d=")[0]; } 

     img.src = http + '&d=' + d.getTime();
    }, timeout);
  }
  
  </script>
